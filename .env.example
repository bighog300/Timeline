NODE_ENV=development
PORT=3001
WEB_PORT=3000
# SESSION_SECRET (required in production; use >= 32 chars and avoid "dev-secret")
SESSION_SECRET=change-me
ADMIN_EMAILS=admin@example.com

GOOGLE_OAUTH_CLIENT_ID=
GOOGLE_OAUTH_CLIENT_SECRET=
GOOGLE_OAUTH_REDIRECT_URI=

ENCRYPTION_KEYRING_JSON=[{"version":"v1","key":"<base64-32-byte-key>"}]
# OR
# ENCRYPTION_KEY_BASE64=<base64-32-byte-key>
# KEY_VERSION=v1

OPENAI_API_KEY=
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/timeline?schema=public

# Quotas (per day)
MAX_SEARCHES_PER_DAY=200
MAX_EMBED_CHUNKS_PER_DAY=2000
MAX_CHAT_MESSAGES_PER_DAY=100
MAX_LLM_TOKENS_PER_DAY=200000

# Feature flags
FEATURE_DRIVE_INDEXING_ENABLED=true
FEATURE_EMBEDDINGS_ENABLED=true
FEATURE_CHAT_ENABLED=true

DRIVE_ADAPTER=stub
GOOGLE_DRIVE_CLIENT_EMAIL=
GOOGLE_DRIVE_PRIVATE_KEY=
SESSION_TTL_MS=604800000
SESSION_COOKIE_NAME=timeline.sid
SESSION_COOKIE_SAMESITE=lax
API_SERVER_ORIGIN=http://localhost:3001
# Set if the web app should call a different API base than /api.
# NEXT_PUBLIC_API_BASE=https://api.example.com
# Set for cross-origin deployments (comma-separated origins).
# CORS_ALLOWED_ORIGINS=https://app.example.com
# CSRF_COOKIE_NAME=timeline.csrf
