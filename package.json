{
  "name": "timeline-app",
  "private": true,
  "workspaces": ["apps/*", "packages/*"],
  "packageManager": "pnpm@10.23.0",
  "engines": {
    "node": "20.x"
  },
  "scripts": {
    "dev:api": "pnpm --filter ./apps/api dev",
    "dev:web": "pnpm --filter ./apps/web dev",
    "db:generate": "pnpm --filter ./apps/api db:generate",
    "db:migrate": "pnpm --filter ./apps/api db:migrate",
    "db:reset": "pnpm --filter ./apps/api db:reset",
    "preflight": "node scripts/preflight.mjs",
    "install": "pnpm install --frozen-lockfile",
    "build": "pnpm -w --filter @timeline/web build",
    "lint": "pnpm -w --filter @timeline/web lint",
    "test": "echo \"No tests configured yet.\"",
    "build:web": "pnpm --filter ./apps/web build",
    "vercel:install": "pnpm install --frozen-lockfile",
    "vercel:build": "pnpm -w --filter @timeline/web build"
  }
}
