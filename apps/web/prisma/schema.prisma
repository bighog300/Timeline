generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String            @id @default(uuid())
  email            String            @unique
  name             String?
  image            String?
  createdAt        DateTime          @default(now())
  sessions         Session[]
  driveConnections DriveConnection[]
  driveFileRefs    DriveFileRef[]
  derivedArtifacts DerivedArtifact[]
  chunkEmbeddings  ChunkEmbedding[]
  chatThreads      ChatThread[]
  indexState       IndexState?
  usageCounter     UsageCounter?
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model DriveConnection {
  id                   String   @id @default(uuid())
  userId               String
  provider             String   @default("google")
  scopes               String
  refreshTokenEncrypted String
  accessTokenEncrypted String?
  tokenExpiry          DateTime?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider])
  @@index([userId])
}

enum DriveFileStatus {
  NEW
  INDEXED
  SKIPPED
  ERROR
}

enum DriveContentStatus {
  PENDING
  INGESTED
  ERROR
  SKIPPED
}

enum ArtifactType {
  RAW_TEXT
  CHUNKS_JSON
  METADATA_JSON
}

enum ChatMessageRole {
  SYSTEM
  USER
  ASSISTANT
}

model DriveFileRef {
  id               String            @id @default(uuid())
  userId           String
  driveFileId      String
  name             String
  mimeType         String
  modifiedTime     DateTime?
  sizeBytes        BigInt?
  checksum         String?
  status           DriveFileStatus   @default(NEW)
  lastError        String?
  ingestedAt       DateTime?
  contentVersion   String?
  contentStatus    DriveContentStatus @default(PENDING)
  contentLastError String?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  derivedArtifacts DerivedArtifact[]
  chunkEmbeddings  ChunkEmbedding[]

  @@unique([userId, driveFileId])
  @@index([userId])
}

model IndexState {
  id         String   @id @default(uuid())
  userId     String   @unique
  cursor     String?
  lastRunAt  DateTime?
  lastFileId String?
  statsJson  Json?
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model DerivedArtifact {
  id             String       @id @default(uuid())
  userId         String
  driveFileRefId String
  type           ArtifactType
  contentText    String?
  contentJson    Json?
  contentHash    String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  driveFileRef   DriveFileRef @relation(fields: [driveFileRefId], references: [id], onDelete: Cascade)
  chunkEmbeddings ChunkEmbedding[]

  @@unique([driveFileRefId, type, contentHash])
  @@index([userId])
}

model ChunkEmbedding {
  id             String   @id @default(uuid())
  userId         String
  driveFileRefId String
  artifactId     String
  chunkIndex     Int
  chunkText      String
  contentHash    String
  embedding      Unsupported("vector(1536)")
  createdAt      DateTime @default(now())
  updatedAt      DateTime @updatedAt
  user           User           @relation(fields: [userId], references: [id], onDelete: Cascade)
  driveFileRef   DriveFileRef   @relation(fields: [driveFileRefId], references: [id], onDelete: Cascade)
  artifact       DerivedArtifact @relation(fields: [artifactId], references: [id], onDelete: Cascade)

  @@unique([artifactId, chunkIndex, contentHash])
  @@index([userId])
  @@index([driveFileRefId])
}

model ChatThread {
  id        String        @id @default(uuid())
  userId    String
  title     String?
  createdAt DateTime      @default(now())
  updatedAt DateTime      @updatedAt
  user      User          @relation(fields: [userId], references: [id], onDelete: Cascade)
  messages  ChatMessage[]

  @@index([userId])
}

model ChatMessage {
  id            String          @id @default(uuid())
  threadId      String
  role          ChatMessageRole
  content       String
  citationsJson Json?
  createdAt     DateTime        @default(now())
  thread        ChatThread      @relation(fields: [threadId], references: [id], onDelete: Cascade)

  @@index([threadId])
  @@index([threadId, createdAt])
}

model UsageCounter {
  id               String   @id @default(uuid())
  userId           String   @unique
  periodStart      DateTime
  searchCount      Int      @default(0)
  embedChunkCount  Int      @default(0)
  chatMessageCount Int      @default(0)
  llmTokenEstimate Int      @default(0)
  updatedAt        DateTime @updatedAt
  user             User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}
