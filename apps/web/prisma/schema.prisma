generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id               String            @id @default(uuid())
  email            String            @unique
  name             String?
  image            String?
  createdAt        DateTime          @default(now())
  sessions         Session[]
  driveConnections DriveConnection[]
  driveFileRefs    DriveFileRef[]
  derivedArtifacts DerivedArtifact[]
  indexState       IndexState?
}

model Session {
  id        String   @id
  userId    String
  expiresAt DateTime
  createdAt DateTime @default(now())
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
}

model DriveConnection {
  id                   String   @id @default(uuid())
  userId               String
  provider             String   @default("google")
  scopes               String
  refreshTokenEncrypted String
  accessTokenEncrypted String?
  tokenExpiry          DateTime?
  createdAt            DateTime @default(now())
  updatedAt            DateTime @updatedAt
  user                 User     @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([userId, provider])
  @@index([userId])
}

enum DriveFileStatus {
  NEW
  INDEXED
  SKIPPED
  ERROR
}

enum DriveContentStatus {
  PENDING
  INGESTED
  ERROR
  SKIPPED
}

enum ArtifactType {
  RAW_TEXT
  CHUNKS_JSON
  METADATA_JSON
}

model DriveFileRef {
  id               String            @id @default(uuid())
  userId           String
  driveFileId      String
  name             String
  mimeType         String
  modifiedTime     DateTime?
  sizeBytes        BigInt?
  checksum         String?
  status           DriveFileStatus   @default(NEW)
  lastError        String?
  ingestedAt       DateTime?
  contentVersion   String?
  contentStatus    DriveContentStatus @default(PENDING)
  contentLastError String?
  createdAt        DateTime          @default(now())
  updatedAt        DateTime          @updatedAt
  user             User              @relation(fields: [userId], references: [id], onDelete: Cascade)
  derivedArtifacts DerivedArtifact[]

  @@unique([userId, driveFileId])
  @@index([userId])
}

model IndexState {
  id         String   @id @default(uuid())
  userId     String   @unique
  cursor     String?
  lastRunAt  DateTime?
  lastFileId String?
  statsJson  Json?
  user       User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model DerivedArtifact {
  id             String       @id @default(uuid())
  userId         String
  driveFileRefId String
  type           ArtifactType
  contentText    String?
  contentJson    Json?
  contentHash    String
  createdAt      DateTime     @default(now())
  updatedAt      DateTime     @updatedAt
  user           User         @relation(fields: [userId], references: [id], onDelete: Cascade)
  driveFileRef   DriveFileRef @relation(fields: [driveFileRefId], references: [id], onDelete: Cascade)

  @@unique([driveFileRefId, type, contentHash])
  @@index([userId])
}
